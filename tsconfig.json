{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "isolatedModules": false,
    "emitDecoratorMetadata": true,
    "paths": {
      "@*": ["./*"]
    }
  },
  "lib": ["es6"],
  "include": ["src/"]
}
